#!/bin/sh
# TODO:
# - clean

PROJECT_DIR=$(cd `dirname $0` && pwd)/..
BLIB_DIR="${PROJECT_DIR}/blib"
PHP="php -n -c ./etc/php.ini -w"

cd ${PROJECT_DIR}

[ -d ${BLIB_DIR} ] || mkdir ${BLIB_DIR}

rm -rf ${BLIB_DIR}/*

mkdir blib/Narvalo
${PHP} lib/Narvalo.php > ${BLIB_DIR}/Narvalo.php
${PHP} lib/Narvalo/Test.php > ${BLIB_DIR}/Narvalo/Test.php

${PHP} lib/RESTafy.php > ${BLIB_DIR}/RESTafy.php

cd - > /dev/null
