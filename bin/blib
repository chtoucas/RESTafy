#!/bin/sh
# TODO:
# - clean

PROJECT_DIR=$(cd `dirname $0` && pwd)/..
BLIB_DIR="${PROJECT_DIR}/blib"
PHP="php -n -c ./etc/php.ini -w"

cd ${PROJECT_DIR}

[ -d ${BLIB_DIR} ] || mkdir ${BLIB_DIR}

rm -rf ${BLIB_DIR}/*

mkdir blib/Narvalo
${PHP} lib/NarvaloBundle.php > ${BLIB_DIR}/NarvaloBundle.php
${PHP} lib/Narvalo/TestBundle.php > ${BLIB_DIR}/Narvalo/TestBundle.php

${PHP} lib/RESTafyBundle.php > ${BLIB_DIR}/RESTafyBundle.php

cd - > /dev/null
