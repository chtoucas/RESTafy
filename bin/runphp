#!/bin/sh

PROJECT_DIR=$(cd `dirname $0` && pwd)/..

if [ `which uname` ]; then
    case "`uname -a`" in
        CYGWIN*)
            CYGWIN=1 ;;
    esac
fi

PHPRC="${PROJECT_DIR}/etc/php.ini"
PHP_INCLUDE_PATH="${PROJECT_DIR}/lib"

if [ -n "${CYGWIN}" ] ; then
    PHPRC="`cygpath -w -a -- "${PHPRC}"`"
    PHP_INCLUDE_PATH="`cygpath -w -a -- "${PHP_INCLUDE_PATH}"`"
fi

php -d include_path="${PHP_INCLUDE_PATH}" "$@"

# EOF
