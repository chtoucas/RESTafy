#!/bin/sh

if [ `which uname` ]; then
    case "`uname -a`" in
        CYGWIN*)
            echo 'Unsupported platform: Cygwin.'
            exit 1
    esac
fi

PHP_EXE="`which php-cli 2>/dev/null`"
if [ ! -x "${PHP_EXE}" ]; then
    PHP_EXE="`which php 2>/dev/null`"
fi
if [ ! -x "${PHP_EXE}" ]; then
    echo "Sorry but can't find php."; exit 1
fi

PROJECT_DIR=$(cd `dirname $0` && pwd)/..
TMP_DIR="${PROJECT_DIR}/tmp"

[ -d "${TMP_DIR}" ] || mkdir -p "${TMP_DIR}"

PHPRC="${PROJECT_DIR}/etc/php.ini"

"${PHP_EXE}" \
    -d include_path="${PROJECT_DIR}/lib" \
    -d error_log="${TMP_DIR}/php.log" \
    "$@"

# EOF
