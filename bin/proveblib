#!/bin/sh

PROJECT_DIR=$(cd `dirname $0` && pwd)/..

cd ${PROJECT_DIR}

if [ "$1" = "-b" ]; then
    echo 'Building...';
    ${PROJECT_DIR}/bin/blib
    echo 'Done building.';
    echo;
fi

rm -f ${PROJECT_DIR}/test.log

prove -r --ext=.phpt --exec 'php -n -c ./etc/blib.ini -f' t/

cd - > /dev/null

